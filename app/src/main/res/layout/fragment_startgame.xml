            <!--android:id="@+id/leader_board_button"-->
            <!--android:layout_width="250dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_margin="5dp"-->
            <!--android:background="@drawable/text_background"-->
            <!--android:elevation="8dp"-->
            <!--android:text="@string/leaderboard_string"-->
            <!--android:textSize="25sp" />-->

        <!--Not a yuge fan of having a big-ass about button... so... let's have a lil icon-->
        <!--<Button-->
            <!--android:id="@+id/about_button"-->
            <!--android:layout_width="250dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_margin="5dp"-->
            <!--android:background="@drawable/text_background"-->
            <!--android:elevation="8dp"-->
            <!--android:text="@string/about_string"-->
            <!--android:textSize="25sp"/>-->

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <ImageView
            android:id="@+id/about_button"
            android:scaleY="1.5"
            android:scaleX="2"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_question"/>

    </LinearLayout>

</FrameLayout>
